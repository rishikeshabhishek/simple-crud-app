<%- include("./partial/header.ejs") %>
<title><%- title %> </title>
<div class="container">
    <h1>Student Registration Form</h1>
    <form method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" class="form-control" name="firstName" placeholder="Enter First Name" required autocomplete="off" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Last Name</label>
                    <input type="text" class="form-control" name="lastName" placeholder="Enter Last Name"  required autocomplete="off"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control" name="address" placeholder="Enter Full Address" required autocomplete="off"/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Contact Number</label>
                    <input type="number" class="form-control" name="contactNumber" placeholder="Enter Contact Number" required autocomplete="off"/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Email ID</label>
                    <input type="email" class="form-control" name="email" placeholder="Enter Email ID" required autocomplete="off"/>
                </div>
            </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>Select Course</label>
              <select class="form-control courses" name="course">
                <option selected disabled>Select Course</option>
                <option value="Laravel">Laravel</option>
                <option value="Node JS">Node JS</option>
                <option value="Web Designing">Web Designing</option>
              </select>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
                <label>Fees</label>
                <input type="text" class="form-control fees" name="fees" readonly required/>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-outline-primary btn-lg btn-block">Submit</button>

    </form>
</div>
<%- include("./partial/footer.ejs") %>
